{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "sync-tray",
  "version": "0.1.0",
  "identifier": "com.sync-tray.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "sync-tray"
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
